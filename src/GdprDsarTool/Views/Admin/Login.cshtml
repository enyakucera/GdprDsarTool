@model AdminLoginViewModel
@{
    ViewData["Title"] = "Admin Login";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <h2 class="text-center mb-4">Admin Login</h2>
        
        <div class="card">
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="admin@company.com" autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="alert alert-info mt-4">
            <strong>Demo Credentials:</strong><br>
            Email: <code>admin@democompany.com</code><br>
            Password: <code>Admin123!</code>
        </div>

        <div class="text-center mt-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-link">Back to Home</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
