@{
    ViewData["Title"] = "GDPR DSAR Automation";
}

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-content animate-fade-in" style="position: relative; z-index: 1; text-align: center; max-width: 700px; margin: 0 auto;">
            <h1>Automate GDPR Requests<br />in Minutes, Not Hours</h1>
            <p class="lead">
                Handle Data Subject Access Requests 10x faster with our simple,
                powerful automation platform built for EU businesses.
            </p>
            <div class="mt-4">
                <a class="btn btn-primary btn-lg me-3" asp-controller="Public" asp-action="SubmitRequest">
                    Submit a Request
                </a>
                <a class="btn btn-primary btn-lg" asp-controller="Admin" asp-action="Login">
                    Admin Dashboard →
                </a>
            </div>
        </div>
    </div>
</section>

