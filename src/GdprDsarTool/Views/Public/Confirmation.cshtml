@model DsarRequest
@{
    ViewData["Title"] = "Request Submitted";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">âœ… Request Submitted Successfully!</h4>
            <p>Your GDPR data request has been received and will be processed within 30 days.</p>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Request Details</h5>
                <hr>
                <dl class="row">
                    <dt class="col-sm-4">Request ID:</dt>
                    <dd class="col-sm-8"><code>@Model.Id</code></dd>

                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.RequesterName</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.RequesterEmail</dd>

                    <dt class="col-sm-4">Request Type:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary">@Model.RequestType</span>
                    </dd>

                    <dt class="col-sm-4">Submitted:</dt>
                    <dd class="col-sm-8">@Model.SubmittedAt.ToString("dd MMMM yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-warning">@Model.Status</span>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="alert alert-info mt-4">
            <strong>ðŸ“§ What's next?</strong>
            <ul class="mb-0 mt-2">
                <li>We've sent a confirmation email to <strong>@Model.RequesterEmail</strong></li>
                <li>Please keep your Request ID for reference: <code>@Model.Id</code></li>
                <li>We will process your request and respond within 30 days</li>
                <li>You'll receive an email notification when your request is complete</li>
            </ul>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
</div>
